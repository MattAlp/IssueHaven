{% extends "bootstrap/base.html" %}


{% block navbar %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">Issue Haven</a>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav mr-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Help with Code
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href={{ url_for("show_issues")}}>All Languages</a>
                        <div class="dropdown-divider"></div>
                        {% for language_name in languages %}
                            <a class="dropdown-item" href={{ url_for("show_issues", language=language_name)}}>{{ mappings[language_name] }}</a>
                        {% endfor %}
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Help with Docs and Chores
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href={{ url_for("show_chores")}}>All Languages</a>
                        <div class="dropdown-divider"></div>
                        {% for language_name in languages %}
                            <a class="dropdown-item" href={{ url_for("show_chores", language=language_name)}}>{{ mappings[language_name] }}</a>
                        {% endfor %}
                    </div>
                </li>
            </ul>
            <ul class="nav navbar-nav">
                <li><a class="nav-item nav-link" href="https://github.com/MattAlp"><b>View this project on Github</b></a></li>
                <li><a class="nav-item nav-link" href={{ url_for("about") }}><b>About Issue Haven</b></a></li>
            </ul>
        </div>
    </nav>
{% endblock %}